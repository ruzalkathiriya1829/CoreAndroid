<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightGreen"
    tools:context=".SelectionScreenActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLayout1"
                android:layout_width="205dp"
                android:layout_height="355dp"
                android:scaleType="centerCrop"
                android:src="@drawable/layout1"/>

            <ImageView
                android:id="@+id/imgLayout2"
                android:layout_width="205dp"
                android:layout_height="355dp"
                android:scaleType="centerCrop"
                android:src="@drawable/layout2"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLayout3"
            android:layout_width="205dp"
            android:layout_height="355dp"
            android:scaleType="centerCrop"
            android:src="@drawable/layout3"/>

        <ImageView
            android:id="@+id/imgLayout4"
            android:layout_width="205dp"
            android:layout_height="355dp"
            android:scaleType="centerCrop"
            android:src="@drawable/layout4"/>

    </LinearLayout>




</LinearLayout>